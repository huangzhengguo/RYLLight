@model IEnumerable<RYLLight.Models.ProductScene>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}

<h2>应用场景管理</h2>

<p>
    @Html.ActionLink("新建", "Create")
</p>
<table class="table table-bordered">
    <tr>
        <th>
            场景图片
        </th>
        <th>
            场景展示图片
        </th>
        <th>
            分类
        </th>
        <th>
            场景名称
        </th>
        <th>
            场景描述
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img class="imgThirtySize" src=@(item.ApplicationScenePicturePath) alt="Alternate Text" />
        </td>
        <td>
            <img class="imgThirtySize" src=@(item.ScenePicturePath) alt="Alternate Text" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FreeOne)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SceneName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SceneDescription)
        </td>
        <td>
            @Html.ActionLink("编辑", "Edit", new { id=item.Id }) |
            @Html.ActionLink("详情", "Details", new { id=item.Id }) |
            @Html.ActionLink("删除", "Delete", new { id=item.Id }) |
            @Html.ActionLink("添加产品","AddProduct",new { id=item.Id})
        </td>
    </tr>
}

</table>

@Html.ActionLink("返回管理界面", "Index", "ProductManager")
