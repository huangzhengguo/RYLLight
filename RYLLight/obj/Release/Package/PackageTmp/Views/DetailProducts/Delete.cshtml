@model RYLLight.Models.DetailProduct

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}

<h2>删除</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            产品编码
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Product.ProductCode)
        </dd>

        <dt>
            产品名称
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductName)
        </dd>

        <dt>
            子产品编码
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductCode)
        </dd>

        <dt>
            功率
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductPower)
        </dd>

        <dt>
            流明
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductLumen)
        </dd>

        <dt>
            光角
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductColorAngle)
        </dd>

        <dt>
            图片
        </dt>
        <dd>
            <img src=@(Model.DetailProductPicturePath) alt="Alternate Text" />
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="删除" class="btn btn-default" /> |
            @Html.ActionLink("返回", "Index")
        </div>
    }
</div>
