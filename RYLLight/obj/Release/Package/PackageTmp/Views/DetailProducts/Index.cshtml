@model IEnumerable<RYLLight.Models.DetailProduct>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}

<h2>子产品管理</h2>

<p>
    @Html.ActionLink("创建子产品", "Create",new { productId = ViewBag.productId})
</p>
<table class="table table-bordered">
    <tr>
        <th>
            产品图片
        </th>
        <th>
            类型
        </th>
        <th>
            产品编码
        </th>
        <th>
            产品名称
        </th>
        <th>
            功率
        </th>
        <th>
            流明
        </th>
        <th>
            光角
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img class="imgFiftySize" src=@(item.DetailProductPicturePath) alt="Alternate Text" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductPower)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductLumen)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductColorAngle)
        </td>
        <td>
            @Html.ActionLink("编辑", "Edit", new { id=item.Id }) |
            @Html.ActionLink("详情", "Details", new { id=item.Id }) |
            @Html.ActionLink("删除", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

<div>
    @Html.ActionLink("返回产品列表", "BackToProductList", new { productId = ViewBag.productId })
</div>