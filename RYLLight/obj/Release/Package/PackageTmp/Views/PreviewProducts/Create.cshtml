@model RYLLight.Models.PreviewProduct

@{
    ViewBag.Title = "创建";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}

<h2>创建</h2>


@using (Html.BeginForm("UploadFile", "PreviewProducts", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>产品预览图片</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">
                图片名称
            </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.PictureName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PictureName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">
                预览图片
            </label>
            <div class="col-md-10">
                <input type="file" name="file" value="file" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">
                产品编码
            </label>
            <!--下拉列表应该实现为默认填写是点击进入的产品的编码，提供所有的编码供选择-->
            <div class="col-md-10">
                @Html.DropDownList("ProductId", null, htmlAttributes: new { @class = "form-control"})
                @Html.ValidationMessageFor(model => model.ProductId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="创建" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("返回预览图片列表","Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}