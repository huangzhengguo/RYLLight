@model RYLLight.Models.ProductFeature

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}

<h2>编辑</h2>


@using (Html.BeginForm("Edit", "ProductFeatures",FormMethod.Post,new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <div class="control-label col-md-2">
                特点名称
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ProductFeatureName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ProductFeatureName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">
                图片
            </div>
            <div class="col-md-10">
                @Html.HiddenFor(model => model.ProductFeaturePicturePath)
                <img src=@(Model.ProductFeaturePicturePath) alt="Alternate Text" />
                <input type="file" name="file" value="file" />
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">
                产品编码
            </div>
            <div class="col-md-10">
                @Html.DropDownList("ProductId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ProductId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="保存" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("返回", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
