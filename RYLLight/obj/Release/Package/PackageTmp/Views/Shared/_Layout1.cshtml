@using RYLLight.Models

@{ 
    var salesContacts = (List<SaleContactInfo>)ViewBag.SaleContacts;
}

<!DOCTYPE html>

<html>
<head>
    <title>LeDinPro-lead,innovation,professional</title>
    <meta name="renderer" content="webkit" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Styles.Render("~/bundles/modernizr")
</head>
<body class="inledcoBodyAColor">
    <!--导航栏-->
    <div id="navigationMenu" class="navbar navbar-inverse navbar-fixed-top hidden-xs hidden-sm visible-md visible-lg" style="background-color: #f6f6f6;color: #000000;height: 91px;border-color: #ffffff;">
        <div class="container nonePaddingContainer" style="background: #f6f6f6;">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar" style="background-color: #000000"></span>
                    <span class="icon-bar" style="background-color: #000000"></span>
                    <span class="icon-bar" style="background-color: #000000"></span>
                </button>

                <a style="margin-left:15px;margin-right:30px;display:block" href="/Home">
                    <img src="/Images/logo_black_small.svg" style="width:220px;height:80px;margin-top:5px" alt="Brand" />
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav ulMarginTop" style="margin-top: 30px">
                    <!--这里应该使用从数据库中读取所有的菜单项然后遍历所有的菜单-->
                    @foreach (Menu menuItem in ViewBag.MenuList)
                    {
                        if (menuItem.MenuTitle.Equals("Contact_Us"))
                        {
                            <li><a href="#" id="Contact_Us" style="color: #000000;font-size: 17px">Contact Us</a></li>
                        }
                        else
                        {
                            <li><a href="#" style="color: #000000;font-size: 17px" id=@menuItem.MenuTitle>@menuItem.MenuTitle</a></li>
                        }
                    }
                </ul>
            </div>
        </div>
        <!--媒体查询-->
        <div class="hidden-xs hidden-sm visible-md visible-lg">
            <hr style="background-color: #f37044;height: 2px" />
        </div>
    </div>
    
    <div class="navbar navbar-inverse navbar-fixed-top visible-xs visible-sm hidden-md hidden-lg" style="background-color: #f6f6f6;color: #000000;height: 75px;border-color: #ffffff;">
        <div class="container" style="background: #f6f6f6;">
            <div class="navbar-header">
                <a style="margin-left:15px;margin-right:30px;display:block" href="/Home">
                    <img src="/Images/logo_hor_black.svg" style="width:220px;height:80px" alt="Brand" />
                </a>
            </div>
        </div>
    </div>
    <div> 
        @RenderBody()
    </div>

    <footer id="contact" class="plantFootUpBackgroundColor">
        <div class="plantFootUpBackgroundColor">
            @Html.Partial("SalesContacts")
        </div>

        <div class="plantFootUpBackgroundColor text-center">
            <br />
            <img src="~/Images/logowhite.png" class="disInlineBlockWithSizeLog" />
            <p style="color:white;margin-bottom:0px">Zhengzhou Inledco Lighting Co.,LTD</p>
            <span id="cnzz_stat_icon_1259345350" style="float:left;display:none">
                <a href="http://www.cnzz.com/stat/website.php?web_id=1259345350" target="_blank" title="站长统计">
                    <img src="http://icon.cnzz.com/img/pic.gif" border="0" hspace="0" vspace="0">
                </a>
            </span>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/owl")
    @Scripts.Render("~/bundles/plant")

    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

    <script src="http://s95.cnzz.com/z_stat.php?id=1259345350&amp;show=pic" type="text/javascript"></script>
    <script src="http://c.cnzz.com/core.php?web_id=1259345350&amp;show=pic&amp;t=z" charset="utf-8" type="text/javascript"></script>
</body>
</html>
