@using RYLLight.Models

@{
    var salesContacts = (List<SaleContactInfo>)ViewBag.SaleContacts;
}

@{
    if (salesContacts == null || salesContacts.Count == 0)
    {
        <h3 class="text-center footUp">info@ledinpro.com</h3>
    }
    else
    {
        <div class="container">
            <div class="row" style="margin: 10px">
                @foreach (SaleContactInfo saleContactInfo in salesContacts)
                {
                    <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
                        <table style="font-size:10px;margin-bottom: 10px; color: white;">
                            <tr>
                                <td rowspan="5">
                                    <img style="width: 100px; height: 100px; margin-right: 10px;" src=@saleContactInfo.FreeOne />
                                </td>
                            </tr>
                            <tr>
                                <td>Name:@saleContactInfo.Name</td> 
                            </tr>
                            <tr>
                                <td>Phone:@saleContactInfo.PhoneNumber</td>
                            </tr>
                            <tr>
                                <td>Email:@saleContactInfo.MailBox</td>
                            </tr>
                            <tr>
                                <td>Skype:@saleContactInfo.Skype</td>
                            </tr>
                        </table>
                    </div>
                }
            </div>
        </div>
    }
}
