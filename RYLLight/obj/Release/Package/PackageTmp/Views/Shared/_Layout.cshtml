@using RYLLight.Models

<!DOCTYPE html>
<html>
<head>
    <title>LeDinPro-lead,innovation,professional</title>
    <meta name="renderer" content="webkit" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!--导航栏模板-->
    <div id="navigationMenu" class="navbar navbar-inverse navbar-fixed-top hidden-xs hidden-sm visible-md visible-lg">
        <div class="container nonePaddingContainer">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <a style="margin-left:15px;margin-right:30px;display:block" href="/Home">
                    <img src=@ViewBag.Logo style="width:220px;height:80px" alt="Brand" />
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav ulMarginTop">
                    <!--这里应该使用从数据库中读取所有的菜单项然后遍历所有的菜单-->
                    @foreach (Menu menuItem in ViewBag.MenuList)
                    {
                        <li>@Html.ActionLink(menuItem.MenuTitle, menuItem.Link, "Home")</li>
                    }
                </ul>
            </div>
            <div class="hidden-xs hidden-sm visible-md visible-lg whiteHorizontal">
                <hr />
            </div>
        </div>
    </div>

    <!--媒体选择-->
    <div class="navbar navbar-inverse navbar-fixed-top visible-xs visible-sm hidden-md hidden-lg">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <a style="margin-left:15px;margin-right:30px;display:block" href="/Home">
                    <img src=@ViewBag.Logo style="width:220px;height:80px" alt="Brand" />
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav ulMarginTop leftnavbar-nav">
                    <!--这里应该使用从数据库中读取所有的菜单项然后遍历所有的菜单-->
                    @foreach (Menu menuItem in ViewBag.MenuList)
                    {
                        <li>@Html.ActionLink(menuItem.MenuTitle, menuItem.Link, "Home")</li>
                    }
                </ul>
            </div>
        </div>
    </div>

    @if (ViewBag.NavTitle != null)
    {
        <div class="blackNavigationBackground titleNavigation">
            <div class="container">
                <br />
                <p>@(ViewBag.NavTitle)</p>
            </div>
        </div>
    }

    <div id="jumbotron" class="jumbotron">
        <div id="bodyContainer">
            @RenderBody()
        </div>
    </div>

    <footer style="background-color:black">
        @Html.Partial("SalesContacts")
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<p style="color:white;background-color:black;float:right">&copy;Inledco Lighting Co.,Ltd 2006-@DateTime.Now.Year</p>
    </footer>

    <span id="cnzz_stat_icon_1259345350" style="float:left;display:none">
        <a href="http://www.cnzz.com/stat/website.php?web_id=1259345350" target="_blank" title="站长统计">
            <img src="http://icon.cnzz.com/img/pic.gif" border="0" hspace="0" vspace="0">
        </a>
    </span>
    <!--这里渲染注册的虚拟路径，虚拟路径中添加了脚本或者样式表
        JavaScript脚本都在文档流的最后加载，可以加快网页的加载速度
        使用虚拟路径进行加载
        -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/owl")
    @RenderSection("scripts", required: false)

    <script src="http://s95.cnzz.com/z_stat.php?id=1259345350&amp;show=pic" type="text/javascript"></script>
    <script src="http://c.cnzz.com/core.php?web_id=1259345350&amp;show=pic&amp;t=z" charset="utf-8" type="text/javascript"></script>

    <!--实现上下滚动网页时导航栏透明度渐变效果-->
    <script type="text/javascript">
        var globalTop = 0;
        var navigationOpacity = 1.0;
        $(document).ready(function () {
            $(window).scroll(function () {
                var scrollTop = $(window).scrollTop();
                if (scrollTop > globalTop) {
                    if (navigationOpacity >= 0.52) {
                        navigationOpacity = navigationOpacity - 0.02
                    }
                    $("#navigationMenu").css("opacity", navigationOpacity);
                } else {
                    if (navigationOpacity <= 0.98){
                        navigationOpacity =  navigationOpacity + 0.02
                    }
                    
                    $("#navigationMenu").css("opacity", navigationOpacity);
                }

                globalTop = scrollTop;
                console.log(scrollTop);
            });
        });
    </script>
</body>
</html>
