@model IEnumerable<RYLLight.Models.CompanyInfo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}

<h2>公司信息</h2>

<p>
    @Html.ActionLink("创建", "Create")
</p>
<table class="table table-bordered">
    <tr>
        <th>
            公司名称
        </th>
        <th>
            公司地址
        </th>
        <th>
            公司电话
        </th>
        <th>
            公司邮箱
        </th>
        <th>
            公司简介
        </th>
        <th>
            公司历史
        </th>
        <th>
            业务介绍
        </th>
        <th>
            公司简介
        </th>
        <th>
            背景图片
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CompanyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CompanyAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MailBox)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CompanyDescription)
        </td>
        <td>
            <img class="imageSize100" src=@item.FreeOne />
        </td>
        <td>
            <img class="imageSize100" src=@item.FreeTwo />
        </td>
        <td>
            <img class="imageSize100" src=@item.FreeThree />
        </td>
        <td>
            <img class="imageSize100" src=@item.CompanyBackgroundImg />
        </td>
        <td>
            @Html.ActionLink("编辑", "Edit", new { id=item.Id }) |
            @Html.ActionLink("详情", "Details", new { id=item.Id }) |
            @Html.ActionLink("删除", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

@Html.ActionLink("返回管理界面", "Index", "ProductManager")
