@model RYLLight.Models.ProductFeature

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}

<h2>详情</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            产品编码
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Product.ProductCode)
        </dd>

        <dt>
            特点名称
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductFeatureName)
        </dd>

        <dt>
            图片
        </dt>

        <dd>
            <img src=@(Model.ProductFeaturePicturePath) alt="Alternate Text" />
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("编辑", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("返回", "Index")
</p>
