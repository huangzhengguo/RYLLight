@model RYLLight.Models.PreviewProduct

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}

<h2>Details</h2>

<div>
    <h4>PreviewProduct</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            产品编码
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Product.ProductCode)
        </dd>

        <dt>
            名称
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PictureName)
        </dd>

        <dt>
            图片
        </dt>

        <dd>
            <img src=@(Model.ProductPicturePath) alt="Alternate Text" />
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("编辑", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("返回列表", "Index")
</p>
