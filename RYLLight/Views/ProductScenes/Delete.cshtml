@model RYLLight.Models.ProductScene

@{
    ViewBag.Title = "删除";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}

<h2>删除</h2>

<h3>确认删除场景</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            场景名称
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SceneName)
        </dd>

        <dt>
            场景描述
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SceneDescription)
        </dd>

        <dt>
            场景大图
        </dt>

        <dd>
            <img src=@(Model.ApplicationScenePicturePath) alt="Alternate Text" />
        </dd>

        <dt>
            场景小图
        </dt>

        <dd>
            <img src=@(Model.ScenePicturePath) alt="Alternate Text" />
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="删除" class="btn btn-default" /> |
            @Html.ActionLink("返回列表", "Index")
        </div>
    }
</div>
