@using RYLLight.Models
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>LeDinPro-lead,innovation,professional</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/bundles/modernizr")
</head>
<body style="width: 100%">
    <!--导航栏-->
    <div id="navigationMenu" class="navbar navbar-inverse navbar-fixed-top hidden-xs hidden-sm visible-md visible-lg" style="background-color: #f6f6f6;color: #000000;height: 91px;border-color: #ffffff;">
        <div class="container nonePaddingContainer" style="background: #f6f6f6;">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar" style="background-color: #000000"></span>
                    <span class="icon-bar" style="background-color: #000000"></span>
                    <span class="icon-bar" style="background-color: #000000"></span>
                </button>

                <a style="margin-left:15px;margin-right:30px;display:block" href="/Home">
                    <img src="/Images/ledinprologo_black.png" style="width:80px;height:80px;margin-top:5px" alt="Brand" />
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav ulMarginTop" style="margin-top: 30px">
                    <!--这里应该使用从数据库中读取所有的菜单项然后遍历所有的菜单-->
                    <li><a href="/Home/InledcoIndex" id="lighting" style="color: #000000;font-size: 17px">Lighting</a></li>
                    <li><a href="/Home/PlantIndex" id="Horticulture" style="color: #000000;font-size: 17px">Horticulture</a></li>
                </ul>
            </div>

            <!--
            <div class="hidden-xs hidden-sm visible-md visible-lg whiteHorizontal">
                <hr />
            </div>
            -->

        </div>
        <!--媒体查询-->
        <div class="hidden-xs hidden-sm visible-md visible-lg">
            <hr style="background-color: #f37044;height: 2px" />
        </div>
    </div>

    <div class="navbar navbar-inverse navbar-fixed-top visible-xs visible-sm hidden-md hidden-lg" style="background-color: #f6f6f6;color: #000000;height: 75px;border-color: #ffffff;">
        <div class="container" style="background: #f6f6f6;">
            <div class="navbar-header">
                <!--
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar" style="background-color: #000000"></span>
                    <span class="icon-bar" style="background-color: #000000"></span>
                    <span class="icon-bar" style="background-color: #000000"></span>
                </button>
                    -->

                <a style="margin-left:15px;margin-right:30px;display:block" href="/Home">
                    <img src="/Images/ledinprologo_black.png" style="width:70px;height:70px" alt="Brand" />
                </a>
            </div>
            @*
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav ulMarginTop leftnavbar-nav">
                        <!--这里应该使用从数据库中读取所有的菜单项然后遍历所有的菜单-->
                        @foreach (Menu menuItem in ViewBag.MenuList)
                        {
                            if (menuItem.MenuTitle.Equals("Contact_Us"))
                            {
                                <li><a href="#" id="Contact_Us" style="color: #000000;">Contact Us</a></li>
                            }
                            else
                            {
                                <li><a href="#" style="color: #000000;" id=@menuItem.MenuTitle>@menuItem.MenuTitle</a></li>
                            }
                        }
                    </ul>
                </div>
            *@
            <!--
            <div class="hidden-xs hidden-sm visible-md visible-lg whiteHorizontal">
                <hr />
            </div>
            -->
        </div>
    </div>

    <!--选择框-->
    <!--大屏幕-->
    <div class="hidden-xs hidden-sm visible-md visible-lg" style="padding-top: 100px;padding-bottom: 90px;background-color: #211F1B">
        <div class="row" style="">
            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                <a href="/Home/InledcoIndex" style="float: right;margin: 0 0 0 auto;display: block;text-align: center;color:black;background-color:white">
                    <h3 style="text-align: center">Lighting</h3>
                    <p>Commercial / Industrial</p>
                    <p>Waterproof LED Linear Light</p>
                    <img class="img-responsive" src="~/Images/商照.jpg" style="width:450px;height:300px" />
                </a>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                <a href="/Home/PlantIndex" style="float: left;margin: 0 auto 0 0;display: block;text-align: center;color:black;background-color:white">
                    <h3 style="text-align: center">Horticulture</h3>
                    <p>Greenhouse / Vertical Farm</p>
                    <p>LED Grow Light</p>
                    <img class="img-responsive" src="~/Images/园艺.jpg" style="width:450px;height:300px" />
                </a>
            </div>
        </div>
    </div>

    <!--小屏幕-->
    <div class="visible-xs visible-sm hidden-md hidden-lg" style="padding-top: 30px;padding-bottom: 30px;background-color: #ffffff">
        <div class="row" style="">
            <div class="col-xs-12 col-sm-12">
                <a href="/Home/InledcoIndex" style="float: right;margin: 0 0 0 auto;display: block;text-align: center;color:black;background-color:white">
                    <h3 style="text-align: center">Lighting</h3>
                    <p>Commercial / Industrial</p>
                    <p>Waterproof LED Linear Light</p>
                    <img class="img-responsive" src="~/Images/商照.jpg" />
                </a>
            </div>
            <div class="col-xs-12 col-sm-12">
                <a href="/Home/PlantIndex" style="float: left;margin: 0 auto 0 0;display: block;text-align: center;color:black;background-color:white">
                    <h3 style="text-align: center">Horticulture</h3>
                    <p>Greenhouse / Vertical Farm</p>
                    <p>LED Grow Light</p>
                    <img class="img-responsive" src="~/Images/园艺.jpg" />
                </a>
            </div>
        </div>
    </div>

    <!--底部区域-->
    <footer id="contact" class="footUpBackgroundColor" style="background-color: #454240">
        <!--<div class="footUpBackgroundColor container" style="background-color: #828C96">
            <h3 class="text-center footUp">info@ledinpro.com</h3>

        </div>-->
        <div class="container">
            <div class="row" style="margin: 10px">
                @foreach (SaleContactInfo saleContactInfo in ViewBag.SaleContacts)
                {
                    <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
                        <img style="width: 80px; height: 100px; float: left" src=@saleContactInfo.FreeOne />
                        <div style="float: left;padding-left: 10px;padding-top: 10px">
                            <p>Phone:@saleContactInfo.PhoneNumber</p>
                            <p>Skype:@saleContactInfo.Skype</p>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="footDownBackgroundColor text-center" style="background-color: #454240">
            <img src="~/Images/ledinprologo_white.png" class="disInlineBlockWithSizeLog" />
            <p style="color:white;margin-bottom:0px">Zhengzhou Inledco Lighting Co.,LTD</p>
            <span id="cnzz_stat_icon_1259345350" style="float:left;display:none">
                <a href="http://www.cnzz.com/stat/website.php?web_id=1259345350" target="_blank" title="站长统计">
                    <img src="http://icon.cnzz.com/img/pic.gif" border="0" hspace="0" vspace="0">
                </a>
            </span>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/owl")
    @Scripts.Render("~/bundles/plant")

    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

    <script src="http://s95.cnzz.com/z_stat.php?id=1259345350&amp;show=pic" type="text/javascript"></script>
    <script src="http://c.cnzz.com/core.php?web_id=1259345350&amp;show=pic&amp;t=z" charset="utf-8" type="text/javascript"></script>
</body>
</html>
