@using RYLLight.Models

@{
    ViewBag.Title = "ProductDetailInfo";
    int index = 0;
}

<div class="lightGrayBackground">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-1 col-md-1 co-lg-1">

            </div>
            <div class="col-xs-12 col-sm-10 col-md-10 co-lg-10">
                <h3 class="detailProductTitle">Overview</h3>
            </div>
            <div class="col-xs-12 col-sm-1 col-md-1 co-lg-1">

            </div>
        </div>

        <!--预览图片部分-->
        <div class="row">
            <div class="col-xs-12 col-sm-1 col-md-1 co-lg-1">

            </div>
            <div class="col-xs-12 col-sm-10 col-md-10 co-lg-10">
                <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner" role="listbox">
                    @foreach (var prev in ViewBag.preViewProductList)
                    {
                        if (index++ == 0)
                        {
                                <div class="item active">
                                    <img src=@(prev.ProductPicturePath) class="img-responsive" />
                                    <div class="carousel-caption">

                                    </div>
                                </div>
                        }
                        else
                        {
                                <div class="item">
                                    <img src=@(prev.ProductPicturePath) class="img-responsive" />
                                    <div class="carousel-caption">

                                    </div>
                                </div>
                        }
                    }
                    </div>

                    <!--Controls-->
                    <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div class="col-xs-12 col-sm-1 col-md-1 co-lg-1">

            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-1 col-md-1 co-lg-1">

            </div>
            <div class="col-xs-12 col-sm-10 col-md-10 co-lg-10">
                <div style="margin-top:15px">
                    <!--描述部分-->
                    <pre class="preDes">@ViewBag.product.ProductDes</pre>
                </div>
                <!--特点图标部分-->
                <div style="display:inline">
                    @foreach (var feature in ViewBag.featureList)
                    {
                        <img class="imgThirtySize" src=@(feature.ProductFeaturePicturePath) alt="Alternate Text" />

                    }
                </div>
            </div>
            <div class="col-xs-12 col-sm-1 col-md-1 co-lg-1">

            </div>
        </div>
    </div>
</div>

